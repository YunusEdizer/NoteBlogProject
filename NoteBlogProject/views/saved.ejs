<%- include('partials/header') %>

    <div class="row">
        <div class="col-12 mb-4">
            <h2 class="fw-bold"><i class="bi bi-bookmark-fill me-2 text-primary"></i>Kaydedilen Yazılar</h2>
            <p class="text-muted">Beğendiğin ve daha sonra okumak istediğin yazılar burada.</p>
        </div>

        <% if (savedPosts.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-light text-center py-5 shadow-sm">
                    <i class="bi bi-bookmark display-1 text-muted opacity-25 mb-3 d-block"></i>
                    <h4 class="mt-3">Henüz kaydedilmiş yazı yok.</h4>
                    <p class="text-muted">Beğendiğin yazıları kaydetmek için yazı detay sayfasındaki "Kaydet" butonunu kullan.</p>
                    <a href="/" class="btn btn-primary mt-3">Yazıları Keşfet</a>
                </div>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% savedPosts.forEach(post => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-effect">
                            <img src="<%= post.image %>" class="card-img-top" alt="Kapak"
                                style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-light text-primary border">
                                        <%= post.category %>
                                    </span>
                                    <small class="text-muted">
                                        <%= new Date(post.createdAt).toLocaleDateString('tr-TR') %>
                                    </small>
                                </div>

                                <h5 class="card-title fw-bold text-truncate">
                                    <%= escapeHtml(post.title) %>
                                </h5>
                                <p class="card-text text-muted small flex-grow-1">
                                    <%= escapeHtml(post.summary || '') %>
                                </p>

                                <!-- Yazar Bilgisi -->
                                <div class="d-flex align-items-center mt-3 pt-3 border-top">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold me-2"
                                        style="width: 32px; height: 32px; font-size: 0.8rem;">
                                        <%= (post.authorName || post.authorUsername || '?').charAt(0) %>
                                    </div>
                                    <div class="line-height-1">
                                        <a href="/profile/<%= post.authorUsername %>"
                                            class="text-decoration-none text-dark fw-bold small stretched-link"
                                            style="position: relative; z-index: 2;">
                                            <%= post.authorName || post.authorUsername %>
                                        </a>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="/post/<%= post.id %>" class="btn btn-sm btn-primary stretched-link" style="position: relative; z-index: 2;">Oku</a>
                                    <form action="/unsave/<%= post.id %>" method="POST" class="mb-0">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-bookmark-x"></i> Kaldır
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

<%- include('partials/footer') %>

