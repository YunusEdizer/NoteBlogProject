<%- include('partials/header') %>

    <div class="row justify-content-center pt-4">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-badge display-1 text-primary opacity-50"></i>
                        <h3 class="fw-bold mt-2">Aramıza Katıl</h3>
                        <p class="text-muted">Profesyonel ağını oluşturmaya başla.</p>
                    </div>

                    <% if (error) { %>
                        <div class="alert alert-danger text-center">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="/register" method="POST">

                                <div class="row g-3">
                                    <!-- Temel Bilgiler -->
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Kullanıcı
                                            Adı</label>
                                        <input type="text" class="form-control" name="username" required
                                            placeholder="ornek: yunusemre">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Şifre</label>
                                        <input type="password" class="form-control" name="password" required
                                            placeholder="******">
                                    </div>

                                    <!-- Profil Detayları -->
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Ad
                                            Soyad</label>
                                        <input type="text" class="form-control" name="fullName" required
                                            placeholder="Örn: Yunus Emre Edizer">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Email</label>
                                        <input type="email" class="form-control" name="email"
                                            placeholder="ornek@email.com">
                                        <div class="form-text">İsteğe bağlı</div>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Hakkımda
                                            (Biyo)</label>
                                        <textarea class="form-control" name="bio" rows="3"
                                            placeholder="Kendinden kısaca bahset... (Örn: Full Stack Geliştirici, Gezgin)"></textarea>
                                    </div>

                                    <div class="col-12">
                                        <label
                                            class="form-label fw-bold small text-uppercase text-muted">Yetenekler</label>
                                        <input type="text" class="form-control" name="skills"
                                            placeholder="Virgülle ayırarak yazın (Örn: Node.js, React, SQL)">
                                        <div class="form-text">Profilinde etiket olarak görünecek.</div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm">
                                    <i class="bi bi-person-plus-fill me-2"></i>Hesap Oluştur
                                </button>

                                <div class="text-center mt-3">
                                    <small>Zaten hesabın var mı? <a href="/login"
                                            class="text-decoration-none fw-bold">Giriş Yap</a></small>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>