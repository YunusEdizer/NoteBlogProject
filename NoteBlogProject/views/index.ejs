<%- include('partials/header') %>

    <!-- HERO SECTION -->
    <div class="hero text-center mb-5 position-relative overflow-hidden">
        <div class="container position-relative z-index-2">
            <h1 class="display-4 fw-bold">NoteBlog Keşfet</h1>
            <p class="lead opacity-75">Teknoloji, kariyer ve yaşam üzerine profesyonel içerikler.</p>

            <!-- VITRIN SLIDER (CAROUSEL) -->
            <% if (typeof topPosts !=='undefined' && topPosts.length> 0) { %>
                <div id="topPostsCarousel" class="carousel slide mt-4 mx-auto shadow rounded overflow-hidden"
                    data-bs-ride="carousel" style="max-width: 800px;">
                    <div class="carousel-inner">
                        <% topPosts.forEach((post, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <div class="position-relative">
                                    <img src="<%= post.image %>" class="d-block w-100" alt="<%= post.title %>"
                                        style="height: 300px; object-fit: cover; filter: brightness(0.6);">
                                    <div class="carousel-caption d-none d-md-block">
                                        <span class="badge bg-primary mb-2">Popüler</span>
                                        <h5 class="fw-bold">
                                            <%= post.title %>
                                        </h5>
                                        <p class="small text-truncate" style="max-width: 600px; margin: 0 auto;">
                                            <%= post.summary %>
                                        </p>
                                        <a href="/post/<%= post.id %>"
                                            class="btn btn-sm btn-outline-light mt-2 rounded-pill px-4">Oku</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#topPostsCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Önceki</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#topPostsCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Sonraki</span>
                    </button>
                </div>
                <% } %>

                    <!-- Hızlı Kategori Filtreleri -->
                    <div class="mt-4">
                        <a href="/"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Hepsi' ? 'active' : '' %>">Hepsi</a>
                        <a href="/?category=Teknoloji"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Teknoloji' ? 'active' : '' %>">Teknoloji</a>
                        <a href="/?category=Kariyer"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Kariyer' ? 'active' : '' %>">Kariyer</a>
                        <a href="/?category=Yaşam"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Yaşam' ? 'active' : '' %>">Yaşam</a>
                        <a href="/?category=Seyehat"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Seyehat' ? 'active' : '' %>">Seyehat</a>
                        <a href="/?category=Sağlık"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Sağlık' ? 'active' : '' %>">Sağlık</a>
                        <a href="/?category=Eğitim"
                            class="btn btn-outline-light rounded-pill px-3 m-1 <%= activeCategory === 'Eğitim' ? 'active' : '' %>">Eğitim</a>
                    </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-4">
            <% if (posts.length===0) { %>
                <div class="col-12 text-center">
                    <div class="alert alert-light py-5 shadow-sm">
                        <i class="bi bi-search display-1 text-muted opacity-25"></i>
                        <h4 class="mt-3">Bu kategoride henüz içerik yok.</h4>
                        <% if (locals.user) { %>
                            <a href="/create" class="btn btn-primary mt-2">İlk Yazıyı Sen Yaz</a>
                            <% } %>
                    </div>
                </div>
                <% } else { %>
                    <% posts.forEach(post=> { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm hover-effect">
                                <img src="<%= post.image %>" class="card-img-top" alt="Kapak"
                                    style="height: 200px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span
                                            class="badge bg-<%= getCategoryColor(post.category) %> text-white border-0 shadow-sm">
                                            <%= post.category %>
                                        </span>
                                        <small class="text-muted">
                                            <%= new Date(post.createdAt).toLocaleDateString('tr-TR') %>
                                        </small>
                                    </div>

                                    <h5 class="card-title fw-bold text-truncate">
                                        <%= escapeHtml(post.title) %>
                                    </h5>
                                    <p class="card-text text-muted small flex-grow-1">
                                        <%= escapeHtml(post.summary || '' ) %>
                                    </p>

                                    <!-- Yazar Bilgisi (YENİ) -->
                                    <div class="d-flex align-items-center mt-3 pt-3 border-top">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold me-2"
                                            style="width: 32px; height: 32px; font-size: 0.8rem;">
                                            <%= (post.authorName || post.authorUsername || '?' ).charAt(0) %>
                                        </div>
                                        <div class="line-height-1">
                                            <a href="/profile/<%= post.authorUsername %>"
                                                class="text-decoration-none text-dark fw-bold small stretched-link"
                                                style="position: relative; z-index: 2;">
                                                <%= post.authorName || post.authorUsername %>
                                            </a>
                                        </div>
                                    </div>

                                    <a href="/post/<%= post.id %>" class="stretched-link" aria-label="Yazıyı oku"></a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>